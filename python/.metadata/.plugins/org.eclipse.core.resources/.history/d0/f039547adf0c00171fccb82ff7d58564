import sys
#expresamos todas las cantidades en céntimos
def cantidadACentimos(cant):
    res=""
    for i in range(len(cant)):
        if (cant[i]!="."):
            res+=cant[i]
        else:
            j=i
    
        
    
         
billetes=[20000,10000,5000,2000,1000,500]
monedas=[200,100,50,20,10,2,1]
devBilletes=[0,0,0,0,0,0]
devMonedas=[0,0,0,0,0,0,0]
sys.argv=['ejercicio17.py','33.55','100']
try:
    float(sys.argv[1]); float(sys.argv[2]) # para que dé una excepción si el formato de los num. no está bien
    if (sys.argv[1][-3]!="." or sys.argv[2][-3]!="."):
        print "Error en las cantidades sólo se permiten 2 decimales."
        sys.exit(1)
    aPagar=int(sys.argv[1].replace(".",""))
    entrega=int(sys.argv[1].replace(".",""))
except:
    print "Debe expresar 2 cantidades de hasta 2 decimales. Las cantidades son incorrectas. Inténtelo de nuevo"
    sys.exit(2)

aPg=int(aPagar*100)
ent=int(entrega*100)
dev=ent-aPg
if (dev<0): print "Error: la cantidad entregada no es suficiente para pagar"; sys.exit(2)
for i in range(len(billetes)):
    if (dev>=billetes[i]):
        devBilletes[i]=dev/billetes[i] #división entera
        dev-=devBilletes[i]*billetes[i]
for i in range(len(monedas)):
    if (dev>=monedas[i]):
        devMonedas[i]=dev/monedas[i] #división entera
        dev-=devMonedas[i]*monedas[i]

print "A devolver:"
for i in range(len(billetes)):
    if (devBilletes[i]>0):
        palabraBilletes=" billete"
        if (devBilletes[i]>1):
            palabraBilletes+="s"
        print str(devBilletes[i])+palabraBilletes+" de "+str(billetes[i]/100)+" euros."
        
for i in range(len(monedas)):
    if (devMonedas[i]>0):
        palabraMonedas=" moneda"
        if (devMonedas[i]>1):
            palabraMonedas+="s"
        cantidad=monedas[i]
        if (monedas[i]==100):
            unidad=" euro."
            cantidad/=100
        elif (monedas[i]>100):
            unidad=" euros."
            cantidad/=100
        elif (monedas[i]==1):
            unidad=" céntimo."
        elif (monedas[i]<100):
            unidad=" céntimos."
        print str(devMonedas[i])+palabraMonedas+" de "+str(cantidad)+unidad
        
